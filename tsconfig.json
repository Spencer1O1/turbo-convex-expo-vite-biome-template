{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@convex/*": ["convex/*"],
      "@shared/*": ["packages/*"],
      "@web/*": ["apps/web/*"],
      "@expo/*": ["apps/expo/*"]
    }
  }
}
